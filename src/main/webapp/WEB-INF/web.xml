<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Voting system for restaurants</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>ru.votingsystem.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mealServlet</servlet-name>
        <servlet-class>ru.votingsystem.web.MealServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
        <servlet-mapping>
        <servlet-name>mealServlet</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>restaurantServlet</servlet-name>
        <servlet-class>ru.votingsystem.web.RestaurantServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>restaurantServlet</servlet-name>
        <url-pattern>/restaurants</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>voteServlet</servlet-name>
        <servlet-class>ru.votingsystem.web.VoteServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>voteServlet</servlet-name>
        <url-pattern>/votes</url-pattern>
    </servlet-mapping>
</web-app>